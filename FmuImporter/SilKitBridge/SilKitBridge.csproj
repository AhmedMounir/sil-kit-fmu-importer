<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <BaseOutputPath>$(SolutionDir)\_build</BaseOutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <RootNamespace>$(MSBuildProjectName.Replace("Bridge", ""))</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="SilKitd.dll" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Common\CommonHelpers.cs" Link="CommonHelpers.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="SilKitd.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
